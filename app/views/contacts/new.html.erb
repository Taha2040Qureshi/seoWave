<body class="default home">
    <section class="row">
    <div class="page_contact row m0">
        <div class="row contact_form m0 contentRow">
            <div class="container">
                <div class="row">
                    <div class="row m0 title_row">
                        <h2>Let's Talk Business</h2>
                        <h5>Tell us about your project ideas or <span>just say hello.</span></h5>
                    </div>
                    <div class="formArea row m0">
                        <%= form_for @contact, class: "row m0 contact_form", id: "contactForm" do |f| %>
                            <div class="col-sm-6">
                                <div class="row m0">
                                    <%= f.label "First name", for:"contact_name"%><span>*</span>
                                    <%= f.text_field :first_name,class:"form-control" %>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="row m0">
                                    <%= f.label "Last name", for:"last_name"%><span>*</span>
                                    <%= f.text_field :last_name,class:"form-control"%>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="row m0">
                                    <%= f.label "Email", for:"email"%><span>*</span>
                                    <%= f.text_field :email, type:"email", class:"form-control",required:"required"%>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="row m0">
                                    <%= f.label "Phone", for:"phone"%>
                                    <%= f.text_field :phone, class:"form-control", required:"required"%>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="row m0">
                                    <%= f.label "Additional Information", for:"description"%>
                                    <%= f.text_area :description, class:"form-control"%><br />
                                </div>
                            </div>
                            <div class="col-sm-12 text-center">
                                <%= f.submit "submit details!", data: { disable_with: "Please wait..." } %>
                            </div>
                        <%end%>
                        <div id="success">
                            <span class="green textcenter">
                                Your message was sent successfully! I will be in touch as soon as I can.
                            </span>
                        </div>
                        <div id="error">
                            <span>
                                Something went wrong, try refreshing and submitting the form again.
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!--Contact Form-->
        <div class="row contact_details m0 text-center">
            <div class="col-sm-3 contact_widgets">
                <div class="row icon_row">
                    <%= image_tag("contact/1.png", alt: "") %>
                </div>
                <h4>Working hours</h4>
                <p>(Mon to Sat): 10.00 AM to 07.00 PM <br> (Sunday): Holiday</p>
            </div>
            <div class="col-sm-3 contact_widgets">
                <div class="row icon_row">
                    <%= image_tag("contact/2.png", alt: "") %>
                </div>
                <h4>Address</h4>


                <p> Head Office (House No. A1 Block Valencia Town, Lahore <br> Pakistan</p>
            </div>
            <div class="col-sm-3 contact_widgets">
                <div class="row icon_row">
                    <%= image_tag("contact/3.png", alt: "") %>
                </div>
                <h4>Contact Details</h4>
                <p><span>Phone :</span> +(61) 123 456 7890 <br> <span>Support:</span> Example@domain.com</p>
            </div>
            <div class="col-sm-3 contact_widgets">
                <div class="row icon_row">
                    <%= image_tag("contact/4.png", alt: "") %>
                </div>
                <h4>Other Offices</h4>
                <p> Africa Region / Kenya Office</p>
                <P>Middle East / Dubai Office</P>

            </div>
        </div>
        <div class="row  m0"><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6809.887068410746!2d74.25749777413924!3d31.41568177561714!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x391900544d5f5e89%3A0xc33fd4514c1ef1db!2sBlock+A+1%2C+Lahore%2C+Pakistan!5e0!3m2!1sen!2s!4v1515610942873"  width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe></div>
    </div>
</section>
